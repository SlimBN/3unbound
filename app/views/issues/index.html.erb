<%= render "issues/list_issues" %>

<h1>Listing issues</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Title</th>
    <th>Editorial</th>
    <th>Newspaper</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.number %></td>
    <td><%= issue.title %></td>
    <td><%= issue.editorial %></td>
    <td><%= issue.newspaper.name %></td>
    <td><%= issue.slug %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Issue', new_issue_path %>

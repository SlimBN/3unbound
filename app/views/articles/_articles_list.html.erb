<div id="articles_list">

    <% @articles.each do |article| %>
    <div class="article">
        <div class="left">
        	<%= link_to (image_tag article.user.avatar_url.to_s), user_path(article.user) %>
        </div>

        <div class="main">
        	<div class="title">
        		<%= link_to article.title, article_path(article) %>
        	</div>

        	<div class="time">
        		par <%= link_to article.user.name, user_path(article.user) %> il y'a <strong><%= time_ago_in_words(article.created_at) %></strong>
        	</div>
            
            <%= article.content %>
        </div>
    </div>
    <% end %>
    
</div>

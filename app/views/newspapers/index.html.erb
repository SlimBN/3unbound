<h1>Listing newspapers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Slug</th>
    <th>Category</th>
    <th>User</th>
    <th>Banned</th>
    <th>Miniature</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @newspapers.each do |newspaper| %>
  <tr>
    <td><%= newspaper.name %></td>
    <td><%= newspaper.description %></td>
    <td><%= newspaper.slug %></td>
    <td><%= newspaper.category_id %></td>
    <td><%= newspaper.user_id %></td>
    <td><%= newspaper.banned %></td>
    <td><%= newspaper.miniature %></td>
    <td><%= link_to 'Show', newspaper %></td>
    <td><%= link_to 'Edit', edit_newspaper_path(newspaper) %></td>
    <td><%= link_to 'Destroy', newspaper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

